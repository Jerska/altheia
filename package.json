{
  "name": "altheia-async-data-validator",
  "version": "3.0.0",
  "description": "A very simple, fast and customizable async data validator",
  "main": "src/index.js",
  "keywords": [
    "validator",
    "validate",
    "validation",
    "async",
    "schema"
  ],
  "scripts": {
    "lint": "eslint src/ test/",
    "test": "jest test/",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "build": "webpack",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "always"
  },
  "author": "Samuel Bodin <bodin.samuel@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bodinsamuel/altheia.git"
  },
  "bugs": {
    "url": "http://github.com/bodinsamuel/altheia/issues"
  },
  "homepage": "https://github.com/bodinsamuel/altheia#readme",
  "engines": {
    "node": ">= 7.6"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "lodash": "^4.17.5"
  },
  "devDependencies": {
    "coveralls": "^3.0.1",
    "eslint": "^5.2.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-jest": "^21.15.1",
    "husky": "0.14.3",
    "jest": "^23.4.2",
    "lint-staged": "^7.1.0",
    "prettier": "1.14.0",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.16.3"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
